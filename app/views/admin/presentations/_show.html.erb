<h3>Description</h3>
<p><%= @presentation.description %></p>

<h3>Urls</h3>
<p>View this presentation at <%= link_to(view_presentation_url(@presentation.url_slug), view_presentation_url(@presentation.url_slug)) %></p>
<p>Control this presentation at <%= link_to(present_presentation_url(@presentation.url_slug), present_presentation_url(@presentation.url_slug)) %></p>

<h3>Slides</h3>

<% if @presentation.slides.length == 0 %>

<p>No slides have been added</p>

<% end %>

<% if @presentation.slides.length > 0 %>

<ul id="sortable_slides" data-update-url="<%= admin_slide_position_path %>" >
	<% for slide in @presentation.slides.order(:sequence) %>		
	<li class="ui-state-default" data-id="<%= slide.id %>">
		<span class="ui-icon ui-icon-arrowthick-2-n-s"></span><img src="<%= slide.image.thumb.url %>" width="64" height="42" /><span><%= slide.name %> </span>
		<span class="right"><%= link_to 'edit', edit_admin_slide_path(slide) %></span>
	</li>
	<% end %>
</ul>

<% end %>